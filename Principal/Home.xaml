<Window x:Class="Principal.Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Principal"
        mc:Ignorable="d"
        Title="Home" Height="1080" Width="1920">
    <Grid>
        <TabControl>
            <TabItem Header="Benvingut">
                <Grid Background="#FFE5E5E5">
                    <Button x:Name="btnPartidaNova" Content="Jugar partida nova" HorizontalAlignment="Left" Margin="647,21,0,0" Padding="10" VerticalAlignment="Top" Click="BtnPartidaNova_Click"/>
                    <Image x:Name="imageProfile" HorizontalAlignment="Left" Height="155" Margin="187,21,0,0" VerticalAlignment="Top" Width="323"/>
                    <Label Content="Nom usuari: " HorizontalAlignment="Left" Margin="187,212,0,0" VerticalAlignment="Top" RenderTransformOrigin="2.158,1.159"/>
                    <Label x:Name="lblAliasBenvingut" Content="" HorizontalAlignment="Left" Margin="269,213,0,0" VerticalAlignment="Top" Width="94"/>
                    <Button x:Name="btnModificarAliasBefore" Content="Modificar el meu alias" Padding="5" HorizontalAlignment="Left" Margin="381,211,0,0" VerticalAlignment="Top" Click="BtnModificarAliasBefore_Click"/>
                    <TextBox x:Name="txtBoxAliasNouModificar" Visibility="Hidden" HorizontalAlignment="Left" Margin="385,217,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
                    <Button Visibility="Hidden" x:Name="btnModificarAliasAfter" Padding="5" Content="Modificar" HorizontalAlignment="Left" Margin="549,211,0,0" VerticalAlignment="Top"/>
                    <Button x:Name="btnTancarSessioBenvingut" Content="Tancar la sesió" Padding="10" HorizontalAlignment="Left" Margin="664,331,0,0" VerticalAlignment="Top" Click="BtnTancarSessioBenvingut_Click"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="tabItemMazos" Header="Els meus mazos" Loaded="TabItemMazos_Loaded">
                <Grid Background="#FFE5E5E5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>

                        </Grid.RowDefinitions>
                        <!--Titols mazos-->
                        <Label x:Name="lblNomMazo1" Content="" HorizontalAlignment="Left" Margin="137,145,0,0" Grid.Row="0" VerticalAlignment="Top"/>
                        <Label x:Name="lblNomMazo2" Content="" HorizontalAlignment="Center" Margin="0,145,0,0" Grid.Row="1" VerticalAlignment="Top"/>
                        <Label x:Name="lblNomMazo3" Content="" HorizontalAlignment="Center" Margin="0,146,0,0" Grid.Row="2" VerticalAlignment="Top"/>
                        <!--Cartes Fila 1-->
                        <ListBox x:Name="listBoxRow1Col1" Grid.Column="1" Grid.Row="0" d:ItemsSource="{d:SampleData ItemCount=5}"/>
                        <ListBox x:Name="listBoxRow1Col2" Grid.Column="2" Grid.Row="0" d:ItemsSource="{d:SampleData ItemCount=5}"/>
                        <ListBox x:Name="listBoxRow1Col3" Grid.Column="3" Grid.Row="0" d:ItemsSource="{d:SampleData ItemCount=5}"/>
                        <ListBox x:Name="listBoxRow1Col4" Grid.Column="4" Grid.Row="0" d:ItemsSource="{d:SampleData ItemCount=5}"/>
                        <ListBox x:Name="listBoxRow1Col5" Grid.Column="5" Grid.Row="0" d:ItemsSource="{d:SampleData ItemCount=5}"/>
                        <!--Cartes Fila 2-->
                        <ListBox x:Name="listBoxRow2Col1" Grid.Column="1" Grid.Row="1" d:ItemsSource="{d:SampleData ItemCount=5}"/>
                        <ListBox x:Name="listBoxRow2Col2" Grid.Column="2" Grid.Row="1" d:ItemsSource="{d:SampleData ItemCount=5}"/>
                        <ListBox x:Name="listBoxRow2Col3" Grid.Column="3" Grid.Row="1" d:ItemsSource="{d:SampleData ItemCount=5}"/>
                        <ListBox x:Name="listBoxRow2Col4" Grid.Column="4" Grid.Row="1" d:ItemsSource="{d:SampleData ItemCount=5}"/>
                        <ListBox x:Name="listBoxRow2Col5" Grid.Column="5" Grid.Row="1" d:ItemsSource="{d:SampleData ItemCount=5}"/>
                        <!--Cartes Fila 3-->
                        <ListBox x:Name="listBoxRow3Col1" Grid.Column="1" Grid.Row="2" d:ItemsSource="{d:SampleData ItemCount=5}"/>
                        <ListBox x:Name="listBoxRow3Col2" Grid.Column="2" Grid.Row="2" d:ItemsSource="{d:SampleData ItemCount=5}"/>
                        <ListBox x:Name="listBoxRow3Col3" Grid.Column="3" Grid.Row="2" d:ItemsSource="{d:SampleData ItemCount=5}"/>
                        <ListBox x:Name="listBoxRow3Col4" Grid.Column="4" Grid.Row="2" d:ItemsSource="{d:SampleData ItemCount=5}"/>
                        <ListBox x:Name="listBoxRow3Col5" Grid.Column="5" Grid.Row="2" d:ItemsSource="{d:SampleData ItemCount=5}"/>
                        <!--Botons-->
                        <Button Grid.Column="6" Padding="5" Content="Modificar" HorizontalAlignment="Center" Margin="0,145,0,0" Grid.Row="0" VerticalAlignment="Top"/>
                        <Button Grid.Column="6" Padding="5" Content="Modificar" HorizontalAlignment="Center" Margin="0,145,0,0" Grid.Row="1" VerticalAlignment="Top"/>
                        <Button Grid.Column="6" Padding="5" Content="Modificar" HorizontalAlignment="Center" Margin="0,144,0,0" Grid.Row="2" VerticalAlignment="Top"/>

                    </Grid>
                    <Button Content="Afegir mazo" HorizontalAlignment="Left" Margin="1764,947,0,0" VerticalAlignment="Top" Width="80"/>
                </Grid>
            </TabItem>
            <TabItem Header="Les meves partides">
                <Grid Background="#FFE5E5E5">
                    <Label Content="Totes les meves partides realitzades" HorizontalAlignment="Center" Margin="0,36,0,0" VerticalAlignment="Top"/>
                    <DataGrid x:Name="dataGridPartides" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="102,67,102,172" Loaded="DataGridPartides_Loaded"/>
                    <Label Content="Total de punts guanyats: " HorizontalAlignment="Left" Margin="102,422,0,0" VerticalAlignment="Top" Width="142"/>
                    <Label x:Name="lblPuntuacioUsuari" Content="" HorizontalAlignment="Left" Margin="272,422,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.553,0.157" Width="107"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
